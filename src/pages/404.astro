---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="404 - Page Not Found">
    <Header />
    <main>
        <div class="container">
            <section class="error-hero">
                <div class="error-content">
                    <h1 class="error-code">404</h1>
                    <h2 class="error-title">Page Not Found</h2>
                    <p class="error-message">
                        Oops! This page got lost in cyberspace. 
                        The URL you're looking for doesn't exist or may have been moved.
                    </p>
                    <div class="error-actions">
                        <a href="/" class="error-button primary">
                            üè† Go Home
                        </a>
                        <a href="/writeups" class="error-button secondary">
                            üìù Browse Writeups
                        </a>
                    </div>
                </div>
                <div class="error-visual">
                    <div class="glitch-text">ERROR</div>
                </div>
            </section>
        </div>
    </main>
    <Footer />
</BaseLayout>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .error-hero {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
        min-height: 70vh;
        padding: 4rem 0;
    }

    .error-content {
        text-align: left;
    }

    .error-code {
        font-size: 8rem;
        font-weight: 900;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
        line-height: 0.8;
        filter: drop-shadow(0 0 30px var(--glow-pink));
    }

    .error-title {
        font-size: 3rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 1rem 0;
        font-family: 'Comfortaa', sans-serif;
    }

    .error-message {
        font-size: 1.2rem;
        color: var(--text-secondary);
        line-height: 1.6;
        margin-bottom: 3rem;
        max-width: 500px;
    }

    .error-actions {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .error-button {
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        padding: 1rem 2rem;
        border-radius: 15px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .error-button.primary {
        background: var(--gradient-primary);
        color: white;
    }

    .error-button.primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(255, 0, 110, 0.4);
    }

    .error-button.secondary {
        background: transparent;
        color: var(--accent-cyan);
        border: 2px solid var(--accent-cyan);
    }

    .error-button.secondary:hover {
        background: var(--accent-cyan);
        color: var(--bg-primary);
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(0, 245, 255, 0.4);
    }

    .error-visual {
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
    }

    .glitch-text {
        font-size: 4rem;
        font-weight: 900;
        color: var(--accent-cyan);
        font-family: 'JetBrains Mono', monospace;
        position: relative;
        animation: glitch 2s infinite;
    }

    .glitch-text::before,
    .glitch-text::after {
        content: 'ERROR';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .glitch-text::before {
        color: var(--accent-pink);
        z-index: -1;
        animation: glitch-1 2s infinite;
    }

    .glitch-text::after {
        color: var(--accent-purple);
        z-index: -2;
        animation: glitch-2 2s infinite;
    }

    @keyframes glitch {
        0%, 90%, 100% {
            transform: translate(0);
        }
        20% {
            transform: translate(-2px, 2px);
        }
        40% {
            transform: translate(-2px, -2px);
        }
        60% {
            transform: translate(2px, 2px);
        }
        80% {
            transform: translate(2px, -2px);
        }
    }

    @keyframes glitch-1 {
        0%, 90%, 100% {
            transform: translate(0);
        }
        20% {
            transform: translate(2px, -2px);
        }
        40% {
            transform: translate(-2px, 2px);
        }
        60% {
            transform: translate(-2px, -2px);
        }
        80% {
            transform: translate(2px, 2px);
        }
    }

    @keyframes glitch-2 {
        0%, 90%, 100% {
            transform: translate(0);
        }
        20% {
            transform: translate(-1px, 1px);
        }
        40% {
            transform: translate(1px, -1px);
        }
        60% {
            transform: translate(1px, 1px);
        }
        80% {
            transform: translate(-1px, -1px);
        }
    }

    /* Responsive */
    @media (max-width: 768px) {
        .container {
            padding: 0 1rem;
        }

        .error-hero {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 2rem;
            padding: 2rem 0;
        }

        .error-code {
            font-size: 6rem;
        }

        .error-title {
            font-size: 2rem;
        }

        .error-message {
            font-size: 1.1rem;
        }

        .error-actions {
            justify-content: center;
        }

        .glitch-text {
            font-size: 3rem;
        }
    }
</style>
