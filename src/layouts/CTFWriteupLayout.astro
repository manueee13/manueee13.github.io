---
import "../styles/writeup-content.css";

const { frontmatter } = Astro.props;
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const getCTFLogo = (organizer: string, ctfTimeId?: string) => {
    if (ctfTimeId) {
        return `https://ctftime.org/media/cache/3a/d6/${ctfTimeId}.png`;
    }
    return null;
};

const getImagePath = (imagePath: string, slug: string) => {
    if (!imagePath) return '/favicon.svg';
    
    if (imagePath.startsWith('./')) {
        const cleanPath = imagePath.substring(2);
        return `/${cleanPath}`;
    }
    
    if (imagePath.startsWith('/')) {
        return imagePath;
    }
    
    return `/${imagePath}`;
};

const imagePath = getImagePath(frontmatter.image, frontmatter.slug || '');
const ctfLogo = getCTFLogo(frontmatter.organizer, frontmatter.ctfTimeId);

const formatDate = (date: Date) => {
    return date.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    });
};
---

<BaseLayout title={`${frontmatter.title} - CTF Writeup`}>
    <Header />
    <div style="height: 80px;"></div>
    
    <main>
        <div class="container">
            <!-- Hero section of writeup -->
            <section class="writeup-hero">
                <div class="breadcrumb">
                    <a href="/">home</a>
                    <span>→</span>
                    <a href="/writeups">writeups</a>
                    <span>→</span>
                    <a href="/writeups#ctf">ctf</a>
                    <span>→</span>
                    {frontmatter.organizer && (
                        <>
                            <a href={`/writeups#ctf`}>{frontmatter.organizer}</a>
                            <span>→</span>
                        </>
                    )}
                    <span class="current">{frontmatter.title}</span>
                </div>
                <link rel="stylesheet" href="/src/styles/ctf-writeup.css" />
                <link rel="stylesheet" href="/src/styles/writeup-content.css" />
                            {ctfLogo && frontmatter.organizer && (
                                <div class="ctf-logo-container">
                                    <img src={ctfLogo} alt={`${frontmatter.organizer} logo`} class="ctf-logo" />
                                    <div class="organizer-info">
                                        <span class="organizer-label">CTF Organizer</span>
                                        <span class="organizer-name">{frontmatter.organizer}</span>
                                    </div>
                                </div>
                            )}
                        </div>
                        
                        <h1 class="writeup-title">{frontmatter.title}</h1>
                        <div class="writeup-meta">
                            {frontmatter.organizer && (
                                <span class="meta-item">
                                    <span class="meta-label">organizer:</span>
                                    <span class="meta-value">{frontmatter.organizer}</span>
                                </span>
                            )}
                            <span class="meta-item">
                                <span class="meta-label">category:</span>
                                <span class="meta-value">{frontmatter.category}</span>
                            </span>
                            {frontmatter.difficulty && (
                                <span class="meta-item">
                                    <span class="meta-label">difficulty:</span>
                                    <span class={`meta-value difficulty-${frontmatter.difficulty.toLowerCase()}`}>
                                        {frontmatter.difficulty}
                                    </span>
                                </span>
                            )}
                            <span class="meta-item">
                                <span class="meta-label">date:</span>
                                <span class="meta-value">{formatDate(frontmatter.date)}</span>
                            </span>
                        </div>
                        
                        {frontmatter.description && (
                            <p class="writeup-description">{frontmatter.description}</p>
                        )}
                        
                        <div class="writeup-tags">
                            {frontmatter.tags && frontmatter.tags.map((tag: string) => (
                                <span class="tag">{tag}</span>
                            ))}
                        </div>
                    </div>
                    
                    {frontmatter.image && (
                        <div class="writeup-image">
                            <img src={imagePath} alt={`${frontmatter.title} icon`} />
                        </div>
                    )}
                </div>
            </section>
            
            <!-- Content of markdown -->
            <article class="writeup-content">
                <slot />
            </article>
            
            <!-- Navigation writeups -->
            <nav class="writeup-navigation">
                <a href="/writeups#ctf" class="nav-button back">
                    ← back to ctf writeups
                </a>
            </nav>
        </div>
    </main>
    
    <Footer />
</BaseLayout>
