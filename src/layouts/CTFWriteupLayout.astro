---
import "../styles/writeup-content.css";
import "../styles/ctf-writeup.css";

const { frontmatter } = Astro.props;
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const getImagePath = (image?: string | null) => {
    if (!image) return null;

    const imagePath = image.trim();
    if (!imagePath) return null;

    if (imagePath.startsWith('http://') || imagePath.startsWith('https://')) {
        return imagePath;
    }

    if (imagePath.startsWith('//')) {
        return `https:${imagePath}`;
    }

    if (imagePath.startsWith('./')) {
        return `/${imagePath.substring(2)}`;
    }

    if (imagePath.startsWith('/')) {
        return imagePath;
    }

    return `/${imagePath}`;
};

const imagePath = getImagePath(frontmatter.image) ?? '/favicon.svg';
const competitionName = frontmatter.competition || frontmatter.organizer || null;

const formatDate = (dateInput: Date | string) => {
    const date = typeof dateInput === 'string' ? new Date(dateInput) : dateInput;

    if (Number.isNaN(date.getTime())) {
        return String(dateInput);
    }

    return date.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    });
};
---

<BaseLayout title={`${frontmatter.title} - CTF Writeup`}>
    <Header />
    <div style="height: 80px;"></div>
    
    <main>
        <div class="container">
            <!-- Hero section of writeup -->
            <section class="writeup-hero">
                <div class="breadcrumb">
                    <a href="/">home</a>
                    <span>→</span>
                    <a href="/writeups">writeups</a>
                    <span>→</span>
                    <a href="/writeups#ctf">ctf</a>
                    {competitionName && (
                        <>
                            <span>→</span>
                            <a href="/writeups#ctf">{competitionName}</a>
                        </>
                    )}
                    <span>→</span>
                    <span class="current">{frontmatter.title}</span>
                </div>

                <div class="writeup-header">
                    <div class="writeup-details">
                        <h1 class="writeup-title">{frontmatter.title}</h1>

                        <div class="writeup-meta">
                            {frontmatter.competition && (
                                <span class="meta-item">
                                    <span class="meta-label">competition:</span>
                                    <span class="meta-value">{frontmatter.competition}</span>
                                </span>
                            )}
                            {frontmatter.organizer && (
                                <span class="meta-item">
                                    <span class="meta-label">organizer:</span>
                                    <span class="meta-value">{frontmatter.organizer}</span>
                                </span>
                            )}
                            <span class="meta-item">
                                <span class="meta-label">category:</span>
                                <span class="meta-value">{frontmatter.category}</span>
                            </span>
                            {frontmatter.difficulty && (
                                <span class="meta-item">
                                    <span class="meta-label">difficulty:</span>
                                    <span class={`meta-value difficulty-${frontmatter.difficulty.toLowerCase()}`}>
                                        {frontmatter.difficulty}
                                    </span>
                                </span>
                            )}
                            <span class="meta-item">
                                <span class="meta-label">date:</span>
                                <span class="meta-value">{formatDate(frontmatter.date)}</span>
                            </span>
                        </div>

                        {frontmatter.description && (
                            <p class="writeup-description">{frontmatter.description}</p>
                        )}

                        {frontmatter.tags && frontmatter.tags.length > 0 && (
                            <div class="writeup-tags">
                                {frontmatter.tags.map((tag: string) => (
                                    <span class="tag">{tag}</span>
                                ))}
                            </div>
                        )}
                    </div>

                    {frontmatter.image && (
                        <div class="writeup-image">
                            <img src={imagePath} alt={`${frontmatter.title} icon`} />
                        </div>
                    )}
                </div>
            </section>
            
            <!-- Content of markdown -->
            <article class="writeup-content">
                <slot />
            </article>
            
            <!-- Navigation writeups -->
            <nav class="writeup-navigation">
                <a href="/writeups#ctf" class="nav-button back">
                    ← back to ctf writeups
                </a>
            </nav>
        </div>
    </main>
    
    <Footer />
</BaseLayout>
